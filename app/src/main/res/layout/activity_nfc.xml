<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:backgroundTint="#66FFFFFF"
    android:backgroundTintMode="src_atop">

    <include layout="@layout/titlebar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:height="350dp"
            />


        <ImageView
            android:id="@+id/photoView"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginLeft="420dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="16dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-64dp">

        <Button
            android:id="@+id/qroku"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_number_violet_shape"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:layout_marginTop="8px"
            android:text="QR OKU"
            android:textColor="#FFF"
            android:visibility="invisible"/>

    </LinearLayout>

    <EditText
        android:id="@+id/txtKartaYazilacak"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/button_number_violet_shape"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:height="196dp"
        android:paddingTop="30dp"
        android:text="Lütfen kartınızı okutunuz"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="32sp"
        android:background="@drawable/rounded_corner"
        android:visibility="visible"
        />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/slidingArrow"
        android:layout_width="560dp"
        android:layout_height="180dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/arrow" />

    </LinearLayout>

